    <!--
        Added the constraints for entity Day.
    -->
    <changeSet id="20181120181957-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="student_id"
                                 baseTableName="day"
                                 constraintName="fk_day_student_id"
